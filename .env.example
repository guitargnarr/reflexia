# Reflexia Model Manager Environment Configuration
# Copy this file to .env and customize settings

#=====================
# Web UI Settings
#=====================
# Host to bind the web UI to
WEB_UI_HOST=127.0.0.1
# Port for the web UI
WEB_UI_PORT=8000
# Enable CORS for the web UI
ENABLE_CORS=true

#=====================
# Security Settings
#=====================
# Enable API key authentication for REST endpoints
ENABLE_AUTH=false
# API key for authentication (set this to a secure random string if ENABLE_AUTH=true)
API_KEY=

#=====================
# Resource Settings
#=====================
# Maximum memory usage percentage before adaptive downgrade
MAX_MEMORY_PERCENT=80
# Enable adaptive quantization based on content and system resources
ENABLE_ADAPTIVE_QUANTIZATION=true
# Default model to use
MODEL_NAME=reflexia-r1
# Default model precision level
MODEL_QUANTIZATION=q4_0

#=====================
# Monitoring Settings
#=====================
# Enable Prometheus metrics
ENABLE_METRICS=true
# Port for the metrics server
METRICS_PORT=9090
# Enable telemetry for performance tracking
ENABLE_TELEMETRY=false
# Optional telemetry reporting URL (only used if ENABLE_TELEMETRY=true)
TELEMETRY_URL=

#=====================
# Recovery & Reliability
#=====================
# Enable circuit breakers and health monitoring
ENABLE_RECOVERY=true
# Auto-restart failed components
ENABLE_AUTO_RESTART=true
# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

#=====================
# Advanced Settings
#=====================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Maximum log file size in MB
MAX_LOG_SIZE_MB=10
# Maximum number of log backups
MAX_LOG_BACKUPS=5

#=====================
# Ollama Integration
#=====================
# Enable Metal acceleration on Apple Silicon
OLLAMA_METAL=1
# Ollama host
OLLAMA_HOST=localhost:11434